# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development
PORT=3000

# Database Configuration
POSTGRES_USER=pulse_user
POSTGRES_PASSWORD=pulse_password
POSTGRES_DB=pulse_db

# Database URL (for local development with Docker)
DATABASE_URL=postgresql://pulse_user:pulse_password@localhost:5432/pulse_db?schema=public

# WorkOS Authentication
# Get these from https://dashboard.workos.com
WORKOS_CLIENT_ID=your_workos_client_id_here
WORKOS_API_KEY=your_workos_api_key_here
WORKOS_COOKIE_PASSWORD=generate_32_random_characters_here

# URLs
# For local development
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# CORS Configuration (optional for development)
# Comma-separated list of allowed origins
# If not set, CORS allows all origins in development mode
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000
